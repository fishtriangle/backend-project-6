extends ../layouts/application.pug

block header
    = t('views.labels.editTitle')


block content
    +formFor()(action=route('updateLabel', { id: label.id }) method='post')
        +input(label, 'name', errors)(type="text")
        input(name='_method' type='hidden' value='patch')
        +submit(label)(class="btn btn-outline-light me-4" value=t('views.labels.edit'))
        a.btn.btn-warning.mt-4.px-5(href=route('labels'))= t('views.statuses.cancel')
