extends ../layouts/application.pug

block content
    a.btn.btn-dark.mb-4(href=route('newLabel'))= t('views.labels.create')
    table.table.table-striped
        thead
            tr
                th= t('views.labels.id')
                th= t('views.labels.name')
                th= t('views.labels.createdAt')
                th= t('views.labels.actions')
        tbody
          each label in labels
              tr
                  td= label.id
                  td= label.name
                  td= formatDate(label.createdAt)
                  td.d-flex.flex-row
                      a.btn.btn-dark.me-2(href=route('editLabel', { id: label.id }))= t('views.labels.edit')
                      +buttonTo(route('deleteLabel', { id: label.id }) , 'delete')(class="btn btn-warning" value=t('views.labels.delete'))
